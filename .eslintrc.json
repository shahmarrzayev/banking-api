{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "root": true,
    "rules": {
        "indent": "off",
        "no-await-in-loop": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": "off"
    },
    "plugins": [
        "prettier"
    ]
}